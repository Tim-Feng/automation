{
    "version": "1.0.0",
    "description": "用於 Gemini 影片分析的提示詞，包含格式規範和分析要求",
    "intro": {
        "description": "開場白",
        "content": "請客觀地描述下面提供的{video_type}影片內容。\n\n{video_info}"
    },
    "rules": {
        "analysis_elements": {
            "title": "分析要素",
            "description": "如果你能存取影片內容，請以流暢且連貫的文字描述影片中發生的事件，就像向一個看不到影片的人解釋故事一般",
            "items": [
                "影片中的人物，他們的性格、情緒、互動動機與行為細節",
                "發生的主要事件、情節結構與明顯的轉折點",
                "影片中出現的場景、地點、動作、對話與旁白內容",
                "音樂與音效（請描述其具體風格、氛圍或帶來的效果）",
                "畫面中出現的文字、標語與口號",
                "影片中的品牌或產品及其呈現方式，請客觀描述品牌的主要訴求與產品特色"
            ]
        },
        "writing_style": {
            "title": "寫作風格要求",
            "items": [
                "請以連貫的段落方式呈現，不要使用腳本或分項格式",
                "使用正體中文台灣用語撰寫",
                "中文與英文之間加入半形空白",
                "中文與阿拉伯數字之間加入半形空白",
                "保持客觀，不要加入個人評價或主觀判斷",
                "避免使用「影片開始」、「影片結束」或類似的表述"
            ]
        },
        "name_format": {
            "title": "譯名標注規則",
            "japanese_name": {
                "title": "日文人名",
                "items": [
                    {
                        "rule": "譯名和漢字相同時直接寫",
                        "example": "新垣結衣"
                    },
                    {
                        "rule": "譯名和漢字不同時標註原文",
                        "example": "淺田政志（浅田政志）"
                    },
                    {
                        "rule": "有假名時標註假名",
                        "example": "森田輝（森田ひかる）"
                    }
                ]
            },
            "foreign_name": {
                "title": "外國人名",
                "rules": [
                    {
                        "type": "有中文譯名的人名",
                        "rule": "使用「中文譯名（原文）」格式",
                        "examples": [
                            "羅溫·艾金森（Rowan Atkinson）",
                            "湯姆·克魯斯（Tom Cruise）",
                            "成奇勳（이정재）",
                            "金泰梨（김태리）"
                        ]
                    },
                    {
                        "type": "無中文譯名的人名",
                        "rule": "直接使用原文",
                        "examples": [
                            "Joakim Myrbostad",
                            "あの",
                            "ロッチコカド"
                        ]
                    }
                ]
            },
            "brand_name": {
                "title": "品牌名稱",
                "rules": [
                    {
                        "type": "有中文譯名",
                        "rule": "使用「中文譯名（原文）」格式",
                        "examples": [
                            "麥當勞（McDonald's）",
                            "日清食品（NISSIN）",
                            "可口可樂（Coca-Cola）",
                            "三得利（サントリー）"
                        ]
                    },
                    {
                        "type": "無中文譯名",
                        "rule": "直接使用原文",
                        "examples": [
                            "Spotify",
                            "ほろよい",
                            "ベルトラ"
                        ]
                    }
                ]
            }
        },
        "work_format": {
            "title": "作品名稱",
            "rules": [
                {
                    "type": "有中文譯名",
                    "rule": "使用「中文譯名（原文）」格式，以《》標示作品名",
                    "examples": [
                        "《名偵探柯南》（名探偵コナン）",
                        "《進擊的巨人》（進撃の巨人）",
                        "《魷魚遊戲》（오징어 게임）"
                    ]
                },
                {
                    "type": "無中文譯名",
                    "rule": "直接使用原文，以《》標示作品名",
                    "examples": [
                        "《서울의 봄》",
                        "《強風オールバック》"
                    ]
                }
            ]
        },
        "content_structure": {
            "title": "內容結構",
            "items": [
                "直接開始描述影片內容，不要使用任何形式的開場白，你只是個敘述、形容影片內容的工具，我不需要知道你的任何想法，你也不需要和我客套互動",
                "不要在描述結尾加入任何形式的結語，不需要總結影片內容，不需要你的感想",
                "不要使用任何形式的自我稱呼",
                "不要使用任何形式的對話",
                "品牌和作品名稱必須使用完整標注形式"
            ]
        },
        "error_handling": {
            "title": "錯誤處理",
            "content": "如果你無法直接存取影片內容，請明確指出此限制，並建議可能的替代方案。"
        }
    },
    "parameters": {
        "video_type": "影片類型，例如 'YouTube'、'本地'",
        "video_info": "影片相關資訊，如網址、標題等"
    }
}
